<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_background_drawable"
    android:orientation="vertical"
    tools:context="com.brain_socket.tapdrive.controllers.inApp.fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_login"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.brain_socket.tapdrive.customViews.TextViewCustomFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textSize="@dimen/ts_text_normal"
                android:textColor="@color/white"
                app:fontId="2"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Login with your account provided by Tap &amp; Drive team"
                />

            <com.brain_socket.tapdrive.customViews.EditTextCustomFont
                android:id="@+id/etEmail"
                android:layout_width="@dimen/login_element_width"
                android:layout_height="@dimen/login_button_height"
                android:layout_marginTop="40dp"
                android:drawableLeft="@drawable/ic_email"
                android:background="@drawable/shape_rounded_edit_text"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:layout_gravity="center"
                android:textSize="@dimen/ts_text_normal"
                android:textColor="@color/black"
                android:hint="@string/activity_login_hint_email"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:layout_centerInParent="true"
                app:fontId="1"
                android:text="fatherboard1@gmail.com"/>

            <com.brain_socket.tapdrive.customViews.EditTextCustomFont
                android:id="@+id/etPassword"
                android:layout_width="@dimen/login_element_width"
                android:layout_height="@dimen/login_button_height"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_psw"
                android:background="@drawable/shape_rounded_edit_text"
                android:paddingRight="25dp"
                android:paddingLeft="29dp"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:textSize="@dimen/ts_text_normal"
                android:textColor="@color/black"
                android:hint="@string/activity_login_password_hint"
                android:gravity="center"
                app:fontId="1"
                android:text="123456"/>

            <com.brain_socket.tapdrive.customViews.TextViewCustomFont
                android:id="@+id/btnForgetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right|center_vertical"
                android:layout_marginRight="30dp"
                android:text="@string/activity_login_forgot_password_hint"
                android:textSize="@dimen/ts_text_normal"
                android:textColor="@color/white"
                app:fontId="2"/>

            <com.brain_socket.tapdrive.customViews.TextViewCustomFont
                android:id="@+id/btnLogin"
                android:layout_width="180dp"
                android:layout_height="@dimen/login_button_height"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/shape_black_rounded_button"
                android:textSize="@dimen/ts_text_normal"
                android:textColor="@color/white"
                android:text="@string/activity_login_btn_login"
                app:fontId="2"/>

        </LinearLayout>

    </LinearLayout>


</ScrollView>
