<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="#2b2b2b"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/flPhotoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/temp_pic"
            app:civ_border_color="@color/app_theme"
            app:civ_border_width="2dp"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/header_logo_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/logo_login_white"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/default_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_login"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <com.brain_socket.tapdrive.customViews.TextViewCustomFont
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/flPhotoContainer"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/flPhotoContainer"
        android:layout_toRightOf="@id/flPhotoContainer"
        android:gravity="start"
        android:text="Mhd Jarkas"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_title_big"
        app:fontId="3" />

    <com.brain_socket.tapdrive.customViews.TextViewCustomFont
        android:id="@+id/user_type_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUserName"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/flPhotoContainer"
        android:layout_toRightOf="@id/flPhotoContainer"
        android:gravity="start"
        android:text="Starter"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_title_normal"
        app:fontId="2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="bottom"
        android:background="#ededed" />

</LinearLayout>
