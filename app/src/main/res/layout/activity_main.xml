<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.RevealFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">

        <RelativeLayout
            android:id="@+id/rlMainContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/flMainFragmentContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

            </FrameLayout>

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/app_bg"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="55dp"
                        android:layout_marginRight="55dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="12dp"
                            android:src="@drawable/ic_nav_logo" />

                    </FrameLayout>

                    <ImageView
                        android:id="@+id/filters_icon"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_filters" />

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.AppBarLayout>


        </RelativeLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/app_bg"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header_main"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:menu="@menu/activity_main_drawer">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <com.brain_socket.tapdrive.customViews.TextViewCustomFont
                    android:id="@+id/btnHelp"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|start"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/shape_frame_white"
                    android:gravity="center"
                    android:text="@string/drawer_help"
                    android:textColor="@color/white" />

                <com.brain_socket.tapdrive.customViews.TextViewCustomFont
                    android:id="@+id/btnLogout"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|end"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:text="@string/drawer_logout"
                    android:textColor="@color/app_theme" />
            </FrameLayout>
        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>

    <!--<android.support.v7.widget.CardView-->
        <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/awesome_card"-->
        <!--style="@style/CardView"-->
        <!--app:cardBackgroundColor="@color/material_deep_teal_500"-->
        <!--app:cardElevation="2dp"-->
        <!--app:cardPreventCornerOverlap="false"-->
        <!--app:cardUseCompatPadding="true"-->
        <!--android:layout_marginLeft="8dp"-->
        <!--android:layout_marginRight="8dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:layout_width="300dp"-->
        <!--android:layout_height="300dp"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ededed"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_filter"
                android:layout_margin="20dp"/>

            <com.brain_socket.tapdrive.customViews.TextViewCustomFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Vehicle"
                android:textColor="@color/black"
                android:textSize="@dimen/ts_title_normal"
                app:fontId="2"
                />

        </LinearLayout>

        <com.brain_socket.tapdrive.customViews.TextViewCustomFont
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_vertical"
            android:text="Brand"
            android:gravity="center"
            android:textColor="#a6a6ad"
            android:drawableEnd="@drawable/ic_filter_arrow_down"
            android:drawableRight="@drawable/ic_filter_arrow_down"
            android:textSize="@dimen/ts_text_normal"
            android:background="@drawable/filter_rounded_background"
            app:fontId="2"
            />

        <com.brain_socket.tapdrive.customViews.TextViewCustomFont
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_vertical"
            android:text="Type"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#a6a6ad"
            android:drawableEnd="@drawable/ic_filter_arrow_down"
            android:drawableRight="@drawable/ic_filter_arrow_down"
            android:textSize="@dimen/ts_text_normal"
            android:background="@drawable/filter_rounded_background"
            app:fontId="2"
            />

        <com.brain_socket.tapdrive.customViews.TextViewCustomFont
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_vertical"
            android:text="Year"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#a6a6ad"
            android:drawableEnd="@drawable/ic_filter_arrow_down"
            android:drawableRight="@drawable/ic_filter_arrow_down"
            android:textSize="@dimen/ts_text_normal"
            android:background="@drawable/filter_rounded_background"
            app:fontId="2"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:background="#c4c4c4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_price_filter"
                android:layout_margin="20dp"/>

            <com.brain_socket.tapdrive.customViews.TextViewCustomFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="@dimen/ts_title_normal"
                app:fontId="2"
                />

        </LinearLayout>

        <com.appyvet.rangebar.RangeBar
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:tickStart="5"
            custom:tickInterval="1"
            custom:tickEnd="10"
            custom:rangeBarColor="#f2a41b"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.brain_socket.tapdrive.customViews.TextViewCustomFont
                android:id="@+id/reset_filters_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@drawable/black_text_selector"
                android:layout_gravity="center_horizontal"
                android:scrollbarSize="@android:color/black"
                android:text="Reset"
                android:textAllCaps="true"
                android:background="@drawable/black_button_background"
                android:textSize="16sp"
                app:fontId="3" />

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <com.brain_socket.tapdrive.customViews.TextViewCustomFont
                android:id="@+id/apply_filters_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@drawable/yellow_text_selector"
                android:layout_gravity="center_horizontal"
                android:scrollbarSize="@android:color/black"
                android:text="Apply"
                android:textAllCaps="true"
                android:background="@drawable/yellow_button_background"
                android:textSize="16sp"
                app:fontId="3" />

        </LinearLayout>

    </LinearLayout>

</io.codetail.widget.RevealFrameLayout>