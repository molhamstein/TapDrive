<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:clickable="true"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    tools:context="com.brain_socket.tapdrive.controllers.inApp.fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <com.brain_socket.tapdrive.customViews.TextViewCustomFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="@string/settings_language"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_text_normal"
            app:fontId="2" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/english_language_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
                android:checked="false"
                android:theme="@style/MyRadioButton"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_text_normal" />

            <RadioButton
                android:id="@+id/arabic_language_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|right"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:theme="@style/MyRadioButton"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="العربية"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_text_normal" />

            </RelativeLayout>

        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="#e9e8ea" />

        <RelativeLayout
            android:id="@+id/terms_of_service_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.brain_socket.tapdrive.customViews.TextViewCustomFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:text="@string/settings_terms_of_service"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_text_normal"
                app:fontId="2" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:background="#e9e8ea" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:src="@drawable/logo_login" />

        <!--<ImageView-->
            <!--android:id="@+id/ivName"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="55dp"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:scaleType="centerInside"-->
            <!--android:src="@drawable/splash_name"-->
            <!--android:tint="@color/app_bg" />-->

    </LinearLayout>

</FrameLayout>
