<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brain_socket.tapdrive.controllers.onBoarding.ForgetPasswordActivity"
    android:orientation="vertical"
    android:background="@drawable/login_bg"
    android:gravity="center_horizontal">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/app_theme"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <com.brain_socket.tapdrive.customViews.TextViewCustomFont
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp"
            android:text="@string/activity_forget_password_title"
            android:textSize="@dimen/ts_text_big"
            android:textColor="@color/white"
            app:fontId="2" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo_login"/>


    <com.brain_socket.tapdrive.customViews.TextViewCustomFont
        android:layout_width="@dimen/login_element_width"
        android:layout_height="@dimen/login_button_height"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_text_normal"
        android:text="@string/activity_forget_password_desc"
        app:fontId="1"/>

    <com.brain_socket.tapdrive.customViews.EditTextCustomFont
        android:id="@+id/etEmail"
        android:layout_width="@dimen/login_element_width"
        android:layout_height="@dimen/login_button_height"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/shape_rounded_edit_text"
        android:hint="@string/activity_forget_password_email_hint" />

    <com.brain_socket.tapdrive.customViews.TextViewCustomFont
        android:id="@+id/btnSubmit"
        android:layout_width="180dp"
        android:layout_height="@dimen/login_button_height"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_black_rounded_button"
        android:textSize="@dimen/ts_text_big"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/activity_forget_password_btn_submit"
        app:fontId="1"/>

</LinearLayout>
