    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/filter_rounded_background"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp">

    <com.brain_socket.tapdrive.customViews.TextViewCustomFont
        android:id="@+id/filter_value_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:drawableEnd="@drawable/ic_filter_arrow_down"
        android:drawableRight="@drawable/ic_filter_arrow_down"
        android:drawablePadding="5dp"
